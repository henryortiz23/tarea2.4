<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2._4.Views.PageVideoPlay"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Video seleccionado">


    <VerticalStackLayout VerticalOptions="CenterAndExpand" Spacing="20" Padding="20">
        <Label x:Name="labNombreVideo" FontAttributes="Bold" FontSize="Title" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"/>

        <Frame CornerRadius="10" Padding="0" HorizontalOptions="FillAndExpand">

            <StackLayout>
                <toolkit:MediaElement x:Name="videoControl" 
                Aspect="AspectFill"  VerticalOptions="StartAndExpand"
                ShouldAutoPlay="True"/>

            </StackLayout>

        </Frame>
    </VerticalStackLayout>
</ContentPage>