<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea2._4.MainPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="PageVideoRecorder">


    <VerticalStackLayout VerticalOptions="Center" Spacing="20" Padding="20">
        <Frame CornerRadius="10" Padding="0" HorizontalOptions="FillAndExpand" HeightRequest="400">

            <StackLayout>
                <toolkit:MediaElement x:Name="videoControl" 
            Aspect="AspectFill" VerticalOptions="FillAndExpand"/>

                <Button x:Name="btnGrabar"
            Text="Grabar Video"
            Clicked="btnGrabar_Clicked"
            HorizontalOptions="FillAndExpand"
            CornerRadius="0"    
            Padding="10"/>
            </StackLayout>

        </Frame>

        <StackLayout Orientation="Horizontal" Spacing="10">
            <Button x:Name="btnGuardar"
            Text="Guardar"
                    Clicked="btnGuardar_Clicked"
            HorizontalOptions="FillAndExpand"/>

            <Button x:Name="btnLista"
                    Text="Lista"
                    Clicked="btnLista_Clicked"
                    HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>